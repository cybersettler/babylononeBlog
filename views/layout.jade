doctype html
html(lang='en')  
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    block title
      title BabylonOne
    link(href=baseUrl+'resources/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href=baseUrl+'resources/css/style.css', rel='stylesheet', media='screen')    
    script(src=baseUrl+'resources/lib/jquery-2.1.1.min.js')
    script(src=baseUrl+'resources/js/bootstrap.min.js')
    script(src=baseUrl+'resources/lib/webcomponents.min.js')
    script(src=baseUrl+'resources/lib//three.min.js')
    script(src=baseUrl+'resources/lib/OrbitControls.js')
    link(rel="import" href='../resources/components/matrix-orbit-perspective.html')
  body
    if environment == 'PROD'
      script(src=baseUrl+'resources/js/analytics.js')
    nav.navbar.navbar-default.b1-main-navbar(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="")
            img(alt='Babylon One', src=baseUrl+"resources/images/b1_header_logo.png")
        #navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            each section, id in sections
              if activeSection && activeSection == id
                li.active
                  a(href=section.path)= section.title
              else
                li
                  a(href=section.path)= section.title
    block content
    include footer.jade
